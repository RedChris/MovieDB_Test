<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:name="uk.co.asos.chris.asostest.main.productlist.ProductFragment"
             tools:context=".ui.homescreen.mainactivity.MainActivity"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/layout_background_light_grey">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_horizontal"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/screen_production"/>

</FrameLayout>
